<div class="card" style="width: 18rem;" onclick="openContainer(this)">
  <div class="card-body">
    <h5 class="card-title"><i>{{employee.name}}</i></h5>
    <div class="card-text closed">
        <p><b><u>Position:</u></b>  {{ employee.position }}</p>
        <p><b><u>Address:</u> </b> {{ employee.address }}</p>
        
    </div>
    
  </div>
</div>


<script>
  function openContainer(container){
    var details = container.firstElementChild.lastElementChild;
    if (details.classList.contains('closed')){
      details.classList.remove('closed')
    }
    else {
      details.classList.add('closed')
    }
  }
</script>