<h1>Orders</h1>
<div class="row">
{{#each orders as |order|}}
<div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
    <div class="card-header">{{ order.id }}  {{order.allergy}} {{order.status}}</div>

  <div class="card-body">

    
     {{#each order.dishes as |dish|}}
    <section class="card text-dark">
    <header>{{ dish.dish_name }}</header>

    <div class="card-body">
      {{ dish.price }}
      {{ dish.allergy }}
    </div>
  
</section>

     {{/each}}
    
   
    
  </div>
</div>
{{/each}}
</div>
